<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Browser" parent="LightTheme">
		<item name="android:colorForeground">@color/charred_orange</item>
		<item name="android:colorForegroundInverse">@color/charred_orange_inverse</item>
		<item name="android:colorBackground">@android:color/white</item>
		<item name="android:textColorPrimary">?android:attr/colorForeground</item>
		<item name="android:textColorSecondary">?android:attr/colorForeground</item>
		<!-- <item name="android:windowBackground">@drawable/bg_stripes</item> -->
		
		<!-- lists -->
		<item name="android:listViewStyle">@style/ListViewStyle</item>
		<item name="android:listDivider">@drawable/divider_horizontal_bright</item>

        <!-- windows -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        
        <!-- buttons -->
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:imageButtonStyle">@style/Button</item>
        <item name="android:buttonStyleSmall">@style/Button</item>
	</style>


</resources>
