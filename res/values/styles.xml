<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--  MAIN -->
 	 
 	<!-- This is needed as API level 5 doesn't seem to respect the API-level qualifier. -->
 	<style name="LightTheme" parent="@android:style/Theme.Light">
        <item name="android:tabWidgetStyle">@android:style/Widget.TabWidget</item>
	 </style>
 	
    <style name="Theme.NoBackground" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@null</item>
    </style>
    
	 <style name="LocastTheme" parent="LightTheme">
		
	 </style>
	 
    
 	<style name="LocationLink" parent="@android:style/Widget.Button">
 	
 	</style>

 	<style name="WindowTitleThick">
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#77000000</item>
        <item name="android:shadowRadius">2.75</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingTop">4dip</item>
        
 		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
 		<item name="android:textColor">#000</item>
 	</style>

 	<style name="WindowTitleThick.Background">
        <!-- <item name="android:background">@drawable/window_title_background</item> -->
        <item name="android:padding">3dip</item>
<!--         <item name="android:background">@android:drawable/title_bar</item> -->
 	</style>
 	
 	
 	<style name="WindowTitleThick.Subtitle">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		
 	</style>
 	
 	<style name="Thumbnail">
 		<item name="android:src">@drawable/ic_placeholder</item>
 		<item name="android:scaleType">centerCrop</item>
 		<item name="android:adjustViewBounds">true</item>
 	</style>
 	
 	<style name="Button" parent="@android:style/Widget.Button">
 		<item name="android:background">@drawable/button</item>
 		<item name="android:textColor">@android:color/white</item>
		<item name="android:gravity">center</item>
 	</style>
 	
 	<style name="Button.Negative">
 		<!-- <item name="android:background">@color/negative_action</item> -->
 		<item name="android:tint">@color/negative_action</item>
 	</style>
 	
 	<style name="CastListItem">
 	
 	</style>
 	<style name="CastListItem.Title">
 		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
 		<item name="android:textStyle">bold</item>
 		<item name="android:maxLines">2</item>
 		<item name="android:ellipsize">marquee</item> 		
 	</style>
 	<style name="CastListItem.Author">
 		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
 		
 	</style>
 	 	<style name="CastListItem.Description">
 		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
 		<item name="android:maxLines">2</item>
 		<item name="android:ellipsize">end</item>
 	</style>
 	
 	<style name="DiscussionUserIcon">
 		<item name="android:padding">3dip</item>
 		<item name="android:scaleType">fitCenter</item>
 		<item name="android:adjustViewBounds">true</item>
<!--  		<item name="android:src">@drawable/icon_default_user</item> -->
 	</style>
	
	<!-- Browser -->
	
	<style name="BrowserMainIcon">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:background">@drawable/btn_main</item>
		<item name="android:textColor">@android:color/primary_text_light</item>
	</style>
	
	<style name="ListViewStyle" parent="@android:style/Widget.ListView.White">
		<item name="android:cacheColorHint">@null</item>
        <item name="android:divider">?android:attr/listDivider</item>
		
	</style>
	
	<style name="Notice_common">
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/bg_message</item>
		<item name="android:textColor">@android:color/primary_text_light</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
	<style name="Notice" parent="@style/Notice_common">
		<item name="android:drawablePadding">10sp</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:textSize">11sp</item>
	</style>
	
	<style name="EmptyList">
		<item name="android:textStyle">italic</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dip</item>
	</style>
	
	<style name="Notice.Info">
		<item name="android:drawableLeft">@drawable/ic_info</item>
	</style>
	
	<style name="SubTitle">
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:paddingBottom">5dip</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:background">@drawable/bg_message</item>
	</style>
	
	<style name="ItineraryTitle">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textStyle">bold</item>
		<item name="android:maxLines">2</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<style name="CastMediaTitle">
		<item name="android:background">#aaaaaaa0</item>
		<item name="android:textColor">#fff</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:paddingBottom">5dip</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:singleLine">false</item>
		<item name="android:maxLines">2</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="VideoOSD">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="ActionBar">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textColor">@color/foreground_dark</item>
		<item name="android:background">@color/background_dark</item>
	</style>
	
	<style name="ActionBar.Button">
		<item name="android:background">@drawable/btn_bg_trans</item>
	</style>
	
	<style name="CastEditTabIndicator">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="BodyEntryTitle">
		<item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingTop">10dip</item>
		<item name="android:paddingBottom">3dip</item>
	</style>
	
	<style name="Widget.TabWidget" parent="@android:style/Widget.TabWidget">
		<item name="android:paddingBottom">5dip</item>
	</style>
	
	<style name="Widget.TabContent" parent="@android:style/Widget">
		<item name="android:background">@drawable/shadow_top</item>
	</style>
</resources>
